<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentAtividade">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Atividade">

        <Button
            android:id="@+id/btnBeginAtua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ComeÃ§ar atividade" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtGeode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp" />

         <Button
            android:id="@+id/btn_terminaAtividade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminar atividade" />

        <Button
            android:id="@+id/btn_listarAtividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar atividades" />

    </LinearLayout>

</FrameLayout>